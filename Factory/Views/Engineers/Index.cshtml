@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Engineer>

@if(@Model.Count == 0)
{
  <h1>No engineers have been added. Please add an engineer</h1>
}
else
{
  <h1>Engineers: </h1>
  <h3>
  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new {id = engineer.EngineerId})</li>
  }
  </h3>
}
<h4>@Html.ActionLink("Add an engineer", "Create")</h4>
<h4>@Html.ActionLink("Return Home", "Index", "Home")</h4>