@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add a machine that @Model.Name is licensed to repair:</h1>

@if(@ViewBag.EngineerId == null)
{
  <h2>There are no engineers available. <br> Please @Html.ActionLink("Add an engineer", "Create", "Engineer").</h2>
}
else
{
  <h3>
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" class="btn btn-lg btn-dark"/>
  }
  </h3>
}

<h4>@Html.ActionLink("Add a Machine", "Create")</h4>