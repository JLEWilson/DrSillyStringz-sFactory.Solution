@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Are you sure you want to delete this car: @Html.DisplayFor(model => model.Name)</h1>
<h3>
@using (Html.BeginForm())
{
  <input type="submit" value="Confirm Delete" class="btn btn-lg btn-dark"/>
}
</h3>

<h4>@Html.ActionLink("Back to machine details", "Details", new { id = Model.MachineId })</h4>
<h4>@Html.ActionLink("Return to machines view", "Index")</h4>
<h4>@Html.ActionLink("Return to homepage", "Index", "Home")</h4>