@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Edit car: </h1>
<h2>Edit this car: @Html.DisplayFor(model => model.Name)</h2>
<h3>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name,
  new {required="required"})

  <input type="submit" value="Submit Edit" class="btn btn-lg btn-dark"/>
}
</h3>

<h4>@Html.ActionLink("Delete this machine", "Delete", new { id = Model.MachineId })</h4>
<h4>@Html.ActionLink("Return to machines view", "Index")</h4>
<h4>@Html.ActionLink("Return to homepage", "Index", "Home")</h4>