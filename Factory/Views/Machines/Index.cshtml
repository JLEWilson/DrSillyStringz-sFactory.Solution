@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>

@if(@Model.Count == 0)
{
  <h1>No machines have been added. Please add a machine</h1>
}
else
{
  <h1>Machines: </h1>
  <h3>
  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new {id = machine.MachineId})</li>
  }
  </h3>
}
<h4>@Html.ActionLink("Add a machine", "Create")</h4>
<h4>@Html.ActionLink("Return Home", "Index", "Home")</h4>